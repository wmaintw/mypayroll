<% if flash[:message] %>
    <p class="alert"><%= flash[:message] %></p>
<% end %>

<%= form_tag "/admin/auth", {:method => "post", :id => "login-form"} do %>
    <%= text_field_tag "username", "", :class => "", :placeholder => "Username" %>
    <%= password_field_tag "password", "", :class => "", :placeholder => "Password" %>
    <%= submit_tag "Login", :class => "btn btn-primary" %>
<% end %>