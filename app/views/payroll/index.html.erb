
<div class="container">
  <div class="row">
    <div class="span12 center-container">

      <% if flash[:message] %>
          <div class="alert">
            <%= flash[:message] %>
          </div>
      <% end %>

      <table class="table table-hover table-striped">
        <thead>
        <tr>
          <th>
            Total Payrolls: <%= @payrolls.count %>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @payrolls.each do |payroll| %>
        <tr>
          <td>
            <i class="icon-list-alt"></i> <%= link_to payroll.payroll_for_month.strftime("%Y %B"), payroll %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>